{
  "name": "action-vtl",
  "version": "0.2.8",
  "private": true,
  "description": "GitHub Action for establishing a consistent semver",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.json",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "package": "rimraf dist && ncc build --source-map --license LICENSE",
    "pretest": "npm run build && tsc --noEmit -p test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest --ui --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapped/action-semver.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Mapped <info@mapped.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@octokit/core": "^7.0.0",
    "@octokit/types": "^13.5.0",
    "@octokit/webhooks": "^13.2.6"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^22.2.0",
    "@octokit/tsconfig": "^3.1.0",
    "@octokit/webhooks-types": "^7.5.1",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "eslint": "^9.0.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "vitest": "^3.0.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.17.2"
  }
}
